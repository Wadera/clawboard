FROM node:20-alpine

# Install python3 and httpx for imagine.py image generation tool
RUN apk add --no-cache python3 py3-pip && pip3 install --break-system-packages httpx

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Expose port
EXPOSE 3001

# Development command (will be overridden by docker-compose)
CMD ["npm", "run", "dev"]
