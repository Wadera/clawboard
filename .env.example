# ClawBoard Environment Configuration
# Copy this file to .env and update values

# =====================================================
# DATABASE
# =====================================================
POSTGRES_DB=clawboard
POSTGRES_USER=clawboard
POSTGRES_PASSWORD=changeme
DB_HOST=clawboard-db
DB_PORT=5432

# =====================================================
# AUTHENTICATION
# =====================================================
# JWT secret for token signing (generate with: openssl rand -hex 64)
JWT_SECRET=change-this-to-a-random-string

# Dashboard login password hash (bcrypt)
# Generated during setup.sh, or manually with: node scripts/hash-password.js yourpassword
DASHBOARD_PASSWORD_HASH=changeme

# =====================================================
# OPENCLAW INTEGRATION
# =====================================================
# Path to your OpenClaw data directory (mounted read-only into the container)
# This directory contains sessions, transcripts, and config files
OPENCLAW_DIR=~/.openclaw

# Path to OpenClaw workspace directory (where SOUL.md, HEARTBEAT.md, memory/ live)
# This is the bot's workspace with personality, memory, and configuration files
OPENCLAW_WORKSPACE=~/.openclaw/workspace

# OpenClaw Gateway WebSocket URL
# Inside Docker, "host.docker.internal" resolves to the host machine
# Port 18789 is the default OpenClaw gateway port
# If running outside Docker, use ws://localhost:18789
OPENCLAW_GATEWAY_URL=ws://host.docker.internal:18789

# =====================================================
# SERVER
# =====================================================
# Backend API port
PORT=3001

# Frontend port (exposed to host)
FRONTEND_PORT=8080

# Node environment
NODE_ENV=production

# CORS origin (frontend URL)
CORS_ORIGIN=http://localhost:8082

# =====================================================
# FRONTEND BUILD
# =====================================================
# API URL for frontend (default: backend on same host)
VITE_API_URL=http://localhost:3001

# WebSocket URL for frontend (default: backend on same host)
VITE_WS_URL=ws://localhost:3001

# =====================================================
# DATA & STORAGE
# =====================================================
# Data directory for persistent files
DATA_DIR=./data

# Optional: Custom backup directory
BACKUP_DIR=./backups

# =====================================================
# DEPLOYMENT
# =====================================================
# Domain name (for Traefik/nginx proxy)
DOMAIN=localhost

# =====================================================
# OPTIONAL: ADVANCED
# =====================================================
# Database backup retention (number of backups to keep)
KEEP_BACKUPS=7

# Database container name (for backup/restore scripts)
DB_CONTAINER_NAME=clawboard-db
